%h1 Listing ideas
%table
  %tr
    %th Id
    %th Title
    %th Description
    %th User
    %th
    %th
    %th
  - @ideas.each do |idea|
    %tr
      %td= idea.id
      %td= idea.title
      %td= idea.description
      %td= idea.username
      %td= link_to 'Show', idea
      %td= link_to 'Edit', edit_idea_path(idea)
      %td= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Idea', new_idea_path
