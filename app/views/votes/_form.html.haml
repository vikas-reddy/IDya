= form_for(@vote) do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2
        = pluralize(@vote.errors.count, "error")
        prohibited this vote from being saved:
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :id
    %br/
    = f.number_field :id
  .field
    = f.label :idea_id
    %br/
    = f.number_field :idea_id
  .field
    = f.label :for_against
    %br/
    = f.check_box :for_against
  .field
    = f.label :username
    %br/
    = f.number_field :username
  .actions
    = f.submit
