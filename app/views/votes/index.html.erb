<h1>Listing votes</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Idea</th>
    <th>For against</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @votes.each do |vote| %>
  <tr>
    <td><%= vote.id %></td>
    <td><%= vote.idea_id %></td>
    <td><%= vote.for_against %></td>
    <td><%= vote.user_id %></td>
    <td><%= link_to 'Show', vote %></td>
    <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
    <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

